@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Orbitron:wght@400;500;700&display=swap');
@import url('https://cdn.tailwindcss.com');

body {
    font-family: 'Inter', sans-serif;
    background-color: #0f172a; /* slate-900 */
    color: #cbd5e1; /* slate-300 */
    max-width: 900px;
    margin: 0 auto;
}

tw-story {
    padding: 2rem;
}

h1, h2, h3, .font-orbitron {
    font-family: 'Orbitron', sans-serif;
}

p.enigma {
    background-color: #1e293b; /* slate-800 */
    border-left: 4px solid #3b82f6; /* blue-500 */
    padding: 1rem;
    font-style: italic;
    color: #94a3b8; /* slate-400 */
}

a {
    color: #60a5fa; /* blue-400 */
    text-decoration: none;
    transition: color 0.2s;
}

a:hover {
    color: #93c5fd; /* blue-300 */
    text-decoration: underline;
}

/* Estilizando os links para parecerem com os cards */
a .phase-card {
    transition: all 0.2s ease-in-out;
}

a:hover .phase-card {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 0 25px rgba(59, 130, 246, 0.5);
}

.phase-card {
    z-index: 10;
}

.glow-effect {
    animation: pulse-glow 2s infinite ease-in-out;
}

@keyframes pulse-glow {
    0%, 100% { box-shadow: 0 0 15px rgba(59, 130, 246, 0.4); }
    50% { box-shadow: 0 0 30px rgba(59, 130, 246, 0.8); }
}

/* Estilo para o campo de input */
input[type="text"] {
    background-color: #334155; /* slate-700 */
    border: 1px solid #475569; /* slate-600 */
    color: #e2e8f0; /* slate-200 */
    padding: 0.5rem;
    border-radius: 4px;
    margin-right: 0.5rem;
}

/* Estilo para o botão */
button {
    background-color: #2563eb; /* blue-600 */
    color: white;
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.2s;
}

button:hover {
    background-color: #3b82f6; /* blue-500 */
}


